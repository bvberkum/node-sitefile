
extends base


block head
  +html-meta("sitefile.main", "base", "sitefile")
  +std-html-client "Sitefile RJS Client"
  style(is="custom-style")
    | paper-toolbar.prologue {
    |   --paper-toolbar-background: white; /*var(--paper-grey-100);*/
    |   --paper-toolbar-color: var(--paper-grey-600);
    | }

block prologue
  paper-toolbar.prologue
    paper-icon-button(icon="expand-more")
    span.title Sf v0
    paper-icon-button(icon="more-vert")


  
block header
  hr

block main
  .container.placeholder.main
  hr

block document
  h3.subtitle Sitefile v0 - RequireJS Client w. Polyfill

block footer
  hr
  paper-button(raised, onclick="sf_info_toast.open()") Popup info toast

block epilogue
  paper-toast(id="sf_info_toast", text="This toast auto-closes after 3 seconds")



