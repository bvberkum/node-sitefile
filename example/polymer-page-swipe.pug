doctype html

html.example

  head
    title Sitefile Polymer example

    script(type='text/javascript', src="/components/jquery/dist/jquery.js")
      script(type='text/javascript', src="/components/coffee-script/extras/coffee-script.js")
    script(type='text/javascript', src="/example/server-generated-javascript")
    //script(type='text/javascript', src="/components/polymer-platform/platform.js")
    // imported later by polymer, but required for Chrome on iPad
    script(src="/components/webcomponentsjs/webcomponents.js")

    link(type='text/coffeescript', href="/example/script.coffee")

    link(rel="stylesheet", type='text/css', href="/example/polymer-example.css")

    link(rel="import", href="/components/swipe-page/swipe-page.html")
    link(rel="import", href="/components/swipe-pages/swipe-pages.html")

  body(unresolved, fullbleed)

    template(is="auto-binding").spa

      swipe-pages(valueattr="hash", selected="{{route}}", transitions="slide-from-right")
        template(repeat="{{page in pages}}")
          swipe-page(selected="{{route}}", hash="{{page.hash}}", layout, vertical, center-center)
            div {{page.name}}

    script
      | var template = document.querySelector('template.spa[is="auto-binding"]');
      | template.pages = [
      |   {name: 'Single', hash: 'one'},
      |   {name: 'page', hash: 'two'},
      |   {name: 'app', hash: 'three'},
      | ];


