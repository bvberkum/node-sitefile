#!/bin/bash

[ -n "$ENV" ] || ENV=development

#[ "$ENV" == "testing" ] && {
#}

version=0.0.5-dev # node-sitefile

echo '{ "sitefilerc": "'$version'" }' > .sitefilerc

(
cat <<HEREDOC
module.exports =
  site: port: 7011
  development: site: port: 7011
  testing: site: port: 7012
  production: site: port: 7013
HEREDOC
) > config/config.coffee

